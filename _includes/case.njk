<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ title }} | Multiple Journalism</title>
  <meta http-equiv="cleartype" content="on">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="canonical" href="{{ page.url }}">
  <meta name="description" content="{{ description }}">
  <meta property="og:title" content="{{ title }} | Multiple Journalism">
  <meta property="og:site_name" content="Multiple Journalism">
  <meta property="og:description" content="{{ description }}">
  <meta property="og:url" content="https://bramalkema.github.io{{ page.url }}">
  <meta property="og:locale" content="en_US">
  <link rel="stylesheet" href="/multiplejournalism-static/93d0270/css/compiled/prod/base.css">
  <script src="/multiplejournalism-static/93d0270/js/build/prod/modernizr.js"></script>
  <link rel="stylesheet" href="/multiplejournalism-static/social-share-styles.css">
  <link rel="stylesheet" href="/multiplejournalism-static/fix-grid-layout.css">
  <link rel="shortcut icon" href="/multiplejournalism-static/favicon.ico">
</head>
<body id="body" class="page--case category--{{ category }}">
  <div class="wrapper js-nav-item" id="top">
    <header>
      <nav class="top-nav">
        <ul class="unstyled-list">
          <li class="">
            <a href="/multiplejournalism-static/">Home</a>
          </li>
          <li class="">
            <a href="/multiplejournalism-static/essay.html">Essay</a>
          </li>
          <li class="is-current">
            <a href="/multiplejournalism-static/cases.html">Cases</a><span class="top-nav__seperator icon-arrow-right"></span> <span class="top-nav__case">{{ title }}</span>
          </li>
          <li class="">
            <a href="/multiplejournalism-static/about.html">About</a>
          </li>
          <li class="nav--idea right hide-on-mobile">
            <a href="/multiplejournalism-static/contribute.html">Submit your idea</a>
          </li>
        </ul>
      </nav>
    </header>
    <div class="category--{{ category }}">
      <div class="article-image">
        <div class="header-image picturefill-background">
          <span data-src="{{ header_image | replace('header_image_extreme', 'header_image_small') }}"></span>
          <span data-src="{{ header_image | replace('header_image_extreme', 'header_image_medium') }}" data-media="(min-width: 680px)"></span>
          <span data-src="{{ header_image | replace('header_image_extreme', 'header_image_medium_large') }}" data-media="(min-width: 1080px)"></span>
          <span data-src="{{ header_image | replace('header_image_extreme', 'header_image_large') }}" data-media="(min-width: 1440px)"></span>
          <span data-src="{{ header_image }}" data-media="(min-width: 1920px)"></span>
        </div>
        <div class="article-category js-article-category-container">
          <a href="/multiplejournalism-static/essay#{{ category }}" class="article-category__title js-article-category">{{ category | capitalize }}</a>
        </div>
      </div>
      <article class="content grid">
        <nav class="article-nav">
          <span class="article-nav__title js-nav-toggle">Jump to topic<b class="article-nav__toggle"></b></span>
          <ul class="article-nav__nav unstyled-list">
            <li class="is-current">
              <a href="#top">Top</a>
            </li>
            <li>
              <a href="#facts">Facts</a>
            </li>
            <li>
              <a href="#content">Content</a>
            </li>
            <li>
              <a href="#read-next">Related cases</a>
            </li>
            <li>
              <a href="#comments">Comments</a>
            </li>
          </ul>
        </nav>
        <header class="article-facts grid__item eleven-twelfths push--one-twelfth p--intro pt--quad js-nav-item" id="facts">
          <span class="article__spacer-right">&nbsp;</span>
          <h1 class="article-title">{{ title }}</h1>
          <div class="grid">
            <aside class="grid__item one-quarter lap--one-whole article-meta">
              {% if year %}<span class="article-meta__title">When</span> <span class="article-meta__data">{{ year }}</span>{% endif %}
              {% if location %}<span class="article-meta__title">Where</span> <span class="article-meta__data">{{ location }}</span>{% endif %}
              {% if authors %}<span class="article-meta__title">Who</span> <span class="article-meta__data js-read-more">{{ authors }}</span>{% endif %}
              {% if website %}<span class="article-meta__title">Website</span> <span class="article-meta__data">{{ website }}</span>{% endif %}
            </aside>
            <section class="article-intro section grid__item three-quarters lap--one-whole">
              <p>{{ description }}</p>
              {% if intro_video_url %}
              <div class="video-container" style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden;">
                <iframe src="{{ intro_video_url }}" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
              </div>
              <div class="credits credits--inline">
                <span class="credits__title">{{ intro_video_title }}</span> <span class="credits__meta">{{ intro_video_credit }}</span>
              </div>
              {% elif intro_video_title %}
              <div class="video-container">
                <span class="play-button"></span>
              </div>
              <div class="credits credits--inline">
                <span class="credits__title">{{ intro_video_title }}</span> <span class="credits__meta">{{ intro_video_credit }}</span>
              </div>
              {% endif %}
            </section>
          </div>
          <div class="social-sharing">
            <a href="https://bsky.app/intent/compose?text={{ title | urlencode }}%20%7C%20Multiple%20Journalism%20https%3A%2F%2Fbramalkema.github.io{{ page.url | urlencode }}"><svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M12 2C6.477 2 2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.879V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.989C18.343 21.129 22 16.99 22 12c0-5.523-4.477-10-10-10z"/></svg> Bluesky</a>
            <a href="https://mastodonshare.com/?url=https%3A%2F%2Fbramalkema.github.io{{ page.url | urlencode }}&text={{ title | urlencode }}%20%7C%20Multiple%20Journalism"><svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M21.258 13.99c-.274 1.41-2.456 2.955-4.962 3.254-1.306.156-2.593.3-3.965.236-2.243-.103-4.014-.535-4.014-.535 0 .218.014.426.04.62.292 2.215 2.196 2.347 4.002 2.41 1.82.062 3.44-.449 3.44-.449l.076 1.646s-1.274.684-3.542.81c-1.25.068-2.803-.032-4.612-.51-3.923-1.039-4.598-5.22-4.701-9.464-.031-1.26-.012-2.447-.012-3.44 0-4.34 2.843-5.611 2.843-5.611 1.433-.658 3.892-.935 6.45-.956h.062c2.557.02 5.018.298 6.451.956 0 0 2.843 1.272 2.843 5.61 0 0 .036 3.201-.397 5.424zm-2.956-5.087c0-1.074-.273-1.927-.822-2.558-.567-.631-1.308-.955-2.229-.955-1.065 0-1.871.41-2.405 1.228l-.518.87-.519-.87C11.276 5.8 10.47 5.39 9.405 5.39c-.921 0-1.663.324-2.229.955-.549.631-.822 1.484-.822 2.558v5.253h2.081V8.995c0-1.075.452-1.62 1.357-1.62 1.001 0 1.502.647 1.502 1.927v2.79h2.07v-2.79c0-1.28.5-1.927 1.502-1.927.905 0 1.357.545 1.357 1.62v5.161h2.081V8.903z"/></svg> Mastodon</a>
          </div>
        </header>

        <div class="js-nav-item" id="content">
          <div class="grid__item one-twelfth grid-spacer pt--triple">
            <div class="bg-spacer bg--white"></div>
          </div>
          <section class="section section--default grid__item ten-twelfths p--normal mb">
            {{ content | safe }}
          </section>
        </div>
      </article>

      <span class="article-end">&nbsp;</span>

      {% if related_cases.length %}
      <div class="read-next-container" id="read-next">
        <aside class="content excerpt-container read-next no-packery">
          <h2 class="related-cases">Related cases</h2>
          {% for relatedSlug in related_cases %}
            {% set relatedCase = collections.cases | findBySlug(relatedSlug) %}
            {% if relatedCase %}
            <a href="/multiplejournalism-static{{ relatedCase.url }}" title="{{ relatedCase.data.title }}" class="case-excerpt" data-country="{{ relatedCase.data.location | lower }}" data-year="{{ relatedCase.data.year }}" data-category="{{ relatedCase.data.category }}" data-tags="">
              <figure class="case-excerpt__image">
                <img width="311" alt="" src="{{ relatedCase.data.header_image | replace('header_image_extreme', 'case_thumbnail') }}">
                <span class="case-excerpt__category">{{ relatedCase.data.category | capitalize }}</span>
              </figure>
              <h2 class="case-excerpt__heading">{{ relatedCase.data.title }}</h2>
              <p class="case-excerpt__text">{{ relatedCase.data.description | truncate(100) }}</p>
            </a>
            {% endif %}
          {% endfor %}
        </aside>
      </div>
      {% endif %}

      <div class="comments" id="comments">
        <div class="content">
          <h2 class="mb">Comments</h2>
          <div class="giscus"></div>
          <script src="https://giscus.app/client.js"
            data-repo="BramAlkema/multiplejournalism-static"
            data-repo-id="R_kgDOP8IdrQ"
            data-category="Comments"
            data-category-id="DIC_kwDOP8IdrM4ClYW5"
            data-mapping="pathname"
            data-strict="0"
            data-reactions-enabled="1"
            data-emit-metadata="0"
            data-input-position="top"
            data-theme="light"
            data-lang="en"
            crossorigin="anonymous"
            async>
          </script>
        </div>
      </div>
    </div>
  </div>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <script>
    !window.jQuery && document.write(unescape('%3Cscript src="/multiplejournalism-static/93d0270/js/libs/jquery.js"%3E%3C/script%3E'));
    BASE = "/";
    CDN_URL = "http://multiplejournalism.org";
    CDN_IMAGE_ROOT = CDN_URL + "/uploads/shared/images";
    LANG = "en";
    JS_ROOT = "/js/build/prod";
  </script>
  <script src="/multiplejournalism-static/93d0270/js/build/prod/main.js"></script>
</body>
</html>
